<html>
  <div id="modalVacancy" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="head" style="text-align:center;">Новая вакансия</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-addvacancy">
                         <div class="err form-group">
                   
                        </div>
                        <div class="form-group">
                            <label for="title">Название</label>
                            <input type="text" id="title" class="form-control" name="title" required>
                        </div>
                        <div class="form-group">
                            <label >Описание</label>
                            <textarea name="description" style = "resize:none; width: 100%; height: 150px;"></textarea>
                        </div>
                        <div class="form-group">
                            <label >Количество отображаемых вопросов</label>
                            <input type="number" id="quantity" class="form-control" name="quantity" required>
                        </div>
                        <div  class=" form-group">
                            <label>Вопросы</label>
                            
                            <div class="questions">
                                
                            </div>
                            <button type="button" class="btn btn-default" onClick="addInput(this)">Добавить вопрос</button>
                        </div>

                        <input id="total" type="hidden" name="total">

                    </div> 
                    <div class="modal-footer">
                        <button onClick="postAdd(this)" id="sbm" style="float:left;" type="button" class="btn btn-success">Добавить</button>
                        <button class="btn btn-default"  type="button" data-dismiss="modal">Закрыть</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</html>